<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ontime">

    <uses-permission android:name="android.permission.RECEIVE_LAUNCH_BROADCASTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- Allows an app to access precise location. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- Allows an app to access approximate location. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- Used to vibrate the phone on notifications -->

    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".utilities.Channels"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignIn_UpClasses.AverageSpeedNotFound"></activity>
        <activity android:name=".SignIn_UpClasses.SelectTempSpeed" />
        <activity android:name=".SignIn_UpClasses.WelcomeNSelect" />
        <activity
            android:name=".MeetingsClasses.Map_Meet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MapRelatedClasses.CatchUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainClasses.MPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainClasses.PlanTripFromLocation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MapRelatedClasses.Navigate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainClasses.SuperScreen"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity
            android:name=".DateTimeClasses.SelectTime"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AutoSuggestClasses.Suggestion"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Upcoming_Walks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MapRelatedClasses.Map"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignIn_UpClasses.Cool"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignIn_UpClasses.Countdown"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignIn_UpClasses.Welcome"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignIn_UpClasses.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignIn_UpClasses.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".RestarterAndServices.JobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".MapRelatedClasses.Service"
            android:clearTaskOnLaunch="true"
            android:enabled="true"
            android:foregroundServiceType="location"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" />

        <receiver
            android:name=".RestarterAndServices.RestartServiceBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="StartMyServiceAtBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="uk.ac.shef.oak.activity_recognition.sensor_service.RestartSensor" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>