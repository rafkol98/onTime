<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="120"
    android:screenOrientation="nosensor">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40">

        <TextView
            android:gravity="start"
            android:paddingTop="10dp"
            android:text="@string/textplacetime"
            android:textColor="@color/blgrey"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/textPlacedTime"
            android:layout_marginStart="10dp" />

        <TextView
            android:gravity="start"
            android:text="@string/textinvitedby"
            android:textColor="@color/blgrey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textInvitedBy"
            android:layout_below="@+id/textPlacedTime"
            android:layout_marginStart="10dp" />
    </LinearLayout>









    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80">

        <Button
            android:gravity="center"
            android:text="@string/accept"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/grey_lighter"
            android:textColor="@color/blgrey"
            android:layout_height="65dp"
            android:id="@+id/btnAcceptMeet"
            android:layout_marginEnd="20dp" />

        <Button
            android:gravity="center"
            android:text="@string/reject"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:id="@+id/btnRejectMeet" />
    </LinearLayout>

</LinearLayout>
