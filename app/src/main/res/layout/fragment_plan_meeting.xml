    <Button
        android:id="@+id/btn_PickDate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/search_button"
        android:drawableLeft="@drawable/date_img"
        android:padding="10dp"
        android:text="@string/pick_date"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDateTime_txt"
        android:drawableStart="@drawable/date_img" />

    <Button
        android:id="@+id/btn_PickTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/search_button"
        android:drawableLeft="@drawable/timer_img"
        android:padding="12dp"
        android:text="@string/pick_time"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/selectDateTime_txt"
        android:drawableStart="@drawable/timer_img" />


</androidx.constraintlayout.widget.ConstraintLayout>